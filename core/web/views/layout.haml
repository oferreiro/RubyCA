!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{name: "viewport", content: "width=device-width", "initial-scale" => "1", " shrink-to-fit" => "no"}
    %title RubyCA
    %link{ href: '/tether/css/tether.min.css', rel: 'stylesheet' }
    %link{ href: '/bootstrap/css/bootstrap.min.css', rel: 'stylesheet' }
    %link{ href: '/font-awesome/css/font-awesome.min.css', rel: 'stylesheet' }
    %link{ href: '/rubyca.css', rel: 'stylesheet' }
    
  %body
    .container
      %nav.navbar.bg-faded.navbar-dark.bg-inverse
        %button.navbar-toggler.hidden-sm-up{type: "button", "data-toggle"=>"collapse", "data-target" => "#navbar-header", |
          "aria-controls" => "navbar-header", "aria-expanded" => "false", "aria-label"=>"Toggle navigation"}
        
        .collapse.navbar-toggleable-xs{id: "navbar-header" }
          %a.navbar-brand{ href: '/admin' } RubyCA
          %ul.nav.navbar-nav
            %li.nav-item
              %a.nav-link{ href: '/admin/certificates' } Certificates
            %li.nav-item
              %a.nav-link{ href: '/admin/csrs' } Signing Requests
            %li.nav-item
              %a.nav-link{ href: '/admin/crl' } CRL
            %li.nav-item
              %a.nav-link{ href: '/admin/config' } Settings
      .container-fluid
        =styled_flash
        = yield
        
  %script{ src: '/jquery/jquery-3.1.1.min.js' }
  %script{ src: '/tether/js/tether.min.js' }'
  %script{ src: '/bootstrap/js/bootstrap.min.js' }'
  %script{ src: '/rubyca.js' }'